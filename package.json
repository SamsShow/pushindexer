{
  "name": "push-chain-x402",
  "version": "1.0.0",
  "description": "Push Chain x402 Payment Protocol - Facilitator, Indexer, and SDK",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run build:sdk && next dev",
    "build": "npm run build:sdk && next build",
    "build:sdk": "cd packages/x402-sdk && npm run build",
    "start": "next start",
    "lint": "next lint",
    "indexer": "tsx src/indexer/indexer.ts",
    "api": "tsx src/api/server.ts",
    "deploy": "hardhat run scripts/deploy.ts --network pushTestnet",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "db:migrate": "psql $DATABASE_URL -f src/db/schema.sql",
    "sdk:dev": "cd packages/x402-sdk && npm run dev"
  },
  "keywords": [
    "push-chain",
    "indexer",
    "blockchain",
    "ethereum"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^6.12.0",
    "@pushchain/core": "^1.0.0",
    "@vercel/node": "^3.2.29",
    "axios": "^1.13.2",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.0",
    "fastify": "^4.26.0",
    "next": "^16.0.2",
    "pg": "^8.11.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "x402-axios": "^0.7.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.10.9",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "hardhat": "^2.20.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
